#!/usr/bin/env bash

# SpykeRel04D Dotfiles - One Command Setup
# curl -fsSL https://raw.githubusercontent.com/SpykeRel04D/dotfiles/master/setup | bash

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
NC='\033[0m'

print_status() { echo -e "${BLUE}[INFO]${NC} $1"; }
print_success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
print_warning() { echo -e "${YELLOW}[WARNING]${NC} $1"; }
print_error() { echo -e "${RED}[ERROR]${NC} $1"; }
print_header() {
    echo -e "${PURPLE}================================${NC}"
    echo -e "${PURPLE}$1${NC}"
    echo -e "${PURPLE}================================${NC}"
}

print_header "ðŸš€ SpykeRel04D Dotfiles Setup"

# Check if git is installed
if ! command -v git &> /dev/null; then
    print_error "Git is required but not installed. Please install git first."
    exit 1
fi

# Clone or update dotfiles
DOTFILES_DIR="$HOME/dotfiles"

if [ -d "$DOTFILES_DIR" ]; then
    print_status "Updating existing dotfiles..."
    cd "$DOTFILES_DIR"
    git pull origin master
else
    print_status "Cloning dotfiles repository..."
    git clone https://github.com/SpykeRel04D/dotfiles.git "$DOTFILES_DIR"
    cd "$DOTFILES_DIR"
fi

# Run the installer
print_status "Running installer..."
./install.sh

print_header "ðŸŽ‰ Setup Complete!"
print_success "Your development environment is ready!"
print_status "Next steps:"
echo "1. Restart your terminal or run 'exec zsh'"
echo "2. Run 'p10k configure' to customize your prompt"
echo "3. Start coding with Cursor!" 